<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.schulz.keriosync">

    <!-- Berechtigungen für Accounts, Kalender und Netzwerk -->
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:label="Kerio Sync"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KerioSync">

        <!-- Haupt-Activity: Account-Einstellungen -->
        <activity
            android:name=".ui.AccountSettingsActivity"
            android:exported="true">

        </activity>

        <!-- Account-Authenticator-Service -->
        <service
            android:name=".auth.KerioAuthenticatorService"
            android:exported="true"
            android:permission="android.permission.BIND_ACCOUNT_AUTHENTICATOR">

            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <!-- Kalender-SyncAdapter-Service -->
        <service
            android:name=".sync.KerioCalendarSyncService"
            android:exported="true"
            android:permission="android.permission.BIND_SYNC_ADAPTER">

            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_calendars" />

            <meta-data
                android:name="android.content.SyncAdapterAuthority"
                android:value="com.android.calendar" />
        </service>

        <!-- JobService: lauscht auf CalendarProvider Änderungen (Instant Sync bei lokalen Änderungen) -->
        <service
            android:name=".sync.KerioCalendarChangeJobService"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="true" />

        <!-- Boot Receiver: stellt sicher, dass Worker + Instant Trigger aktiv bleiben -->
        <receiver
            android:name=".sync.BootReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>
    </application>
</manifest>