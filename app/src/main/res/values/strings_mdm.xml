    <string name="mdm_desc_account_name">Wenn gesetzt, wird dieser Name für den Android-Account verwendet. Sonst wird der Benutzername genutzt.</string>

    <!-- Auto create -->
    <string name="mdm_title_auto_create_account">Account automatisch anlegen</string>
    <string name="mdm_desc_auto_create_account">Wenn aktiv und noch kein KerioSync-Account existiert, legt die App ihn anhand der Daten an.</string>

