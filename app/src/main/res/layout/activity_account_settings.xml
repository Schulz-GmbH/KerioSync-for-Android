<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Einfache UI zum Anlegen/Bearbeiten des Kerio-Accounts -->

    <EditText
        android:id="@+id/edtServerUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Server-URL (z.B. https://mail.schulz.local)"
        android:text="sh-dc1.schulz-hygiene.de"
        android:inputType="textUri" />

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Benutzername"
        android:text="mustermann@schulz-hygiene.de"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Passwort"
        android:text="*olivetti2018#+"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Konto speichern" />

</LinearLayout>
